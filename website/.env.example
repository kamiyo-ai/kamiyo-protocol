# VARDEN Exploit Intelligence Platform - Environment Configuration

# ============================================
# DATABASE
# ============================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://varden:your_secure_postgres_password_here@localhost:5432/varden_exploits

# Connection Pool Settings (Optional - defaults shown)
DB_POOL_SIZE=20          # Maximum connections in pool
DB_POOL_MIN=5            # Minimum connections to maintain
LOG_QUERIES=false        # Set to 'true' to log all SQL queries

# ============================================
# REDIS
# ============================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@localhost:6379

# ============================================
# API CONFIGURATION
# ============================================
JWT_SECRET=your_secure_jwt_secret_here_min_32_chars
NEXTAUTH_SECRET=your_nextauth_secret_min_32_chars_random
NEXTAUTH_URL=http://localhost:3000
API_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ENVIRONMENT=development

# ============================================
# EXTERNAL API KEYS
# ============================================

# Etherscan (for on-chain verification)
ETHERSCAN_API_KEY=your_etherscan_api_key

# GitHub (for security advisories)
GITHUB_TOKEN=your_github_token

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Sentry (for error tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ============================================
# PAYMENT PROCESSING (STRIPE)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ============================================
# ALERT CHANNELS
# ============================================

# Discord
DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=alerts@varden.io

# Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# Slack
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO

# ============================================
# PRODUCTION SETTINGS
# ============================================

# Domain for SSL certificates
DOMAIN=varden.io

# Certbot email
CERTBOT_EMAIL=admin@varden.io

# Enable production profile
COMPOSE_PROFILES=production
