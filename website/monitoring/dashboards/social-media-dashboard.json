{
  "dashboard": {
    "title": "Social Media Posting Monitoring",
    "tags": ["social", "kamiyo", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Posts Total by Platform",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(social_posts_total[5m])",
            "legendFormat": "{{platform}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Posts per second"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Post Success Rate",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(social_posts_total{status=\"success\"}[5m])) / sum(rate(social_posts_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 80, "color": "yellow"},
              {"value": 95, "color": "green"}
            ]
          }
        }
      },
      {
        "id": 3,
        "title": "Platform Authentication Status",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "social_platform_authenticated",
            "legendFormat": "{{platform}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      },
      {
        "id": 4,
        "title": "API Errors by Platform",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(social_api_errors_total[5m])",
            "legendFormat": "{{platform}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Errors per second"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Post Generation Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(social_post_generation_duration_seconds_bucket[5m]))",
            "legendFormat": "{{platform}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "API Call Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(social_post_api_duration_seconds_bucket[5m]))",
            "legendFormat": "{{platform}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Rate Limit Remaining",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "social_rate_limit_remaining",
            "legendFormat": "{{platform}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Requests Remaining"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"type": "lt", "params": [5]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "Rate Limit Low",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 8,
        "title": "Retry Attempts",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(social_retries_total[5m])",
            "legendFormat": "{{platform}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Retries per second"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Posts in Queue",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "social_posts_in_queue",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Queue Size"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Validation Failures",
        "type": "graph",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(social_validation_failures_total[5m])",
            "legendFormat": "{{platform}} - {{reason}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Failures per second"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Queue Processing Duration (p95)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 32, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(social_queue_processing_duration_seconds_bucket[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 30, "color": "yellow"},
              {"value": 60, "color": "red"}
            ]
          }
        }
      },
      {
        "id": 12,
        "title": "Total Posts (24h)",
        "type": "stat",
        "gridPos": {"x": 8, "y": 32, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(social_posts_total{status=\"success\"}[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "short"
        }
      },
      {
        "id": 13,
        "title": "Error Rate (24h)",
        "type": "stat",
        "gridPos": {"x": 16, "y": 32, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(social_api_errors_total[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 10, "color": "yellow"},
              {"value": 50, "color": "red"}
            ]
          }
        }
      }
    ]
  },
  "overwrite": true
}
