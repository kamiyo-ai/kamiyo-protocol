{
  "name": "@kamiyo/eliza",
  "version": "1.0.0",
  "description": "Kamiyo trust layer plugin for ElizaOS agents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "homepage": "https://kamiyo.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/kamiyo-ai/kamiyo-protocol.git",
    "directory": "packages/kamiyo-eliza"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "KAMIYO_NETWORK": {
        "type": "string",
        "description": "Solana network: mainnet, devnet, or localnet",
        "default": "mainnet"
      },
      "SOLANA_PRIVATE_KEY": {
        "type": "string",
        "description": "Base64-encoded Solana keypair for signing transactions"
      },
      "KAMIYO_QUALITY_THRESHOLD": {
        "type": "number",
        "description": "Minimum quality percentage before auto-dispute",
        "default": 80
      },
      "KAMIYO_MAX_PRICE": {
        "type": "number",
        "description": "Maximum SOL per API request",
        "default": 0.01
      },
      "KAMIYO_AUTO_DISPUTE": {
        "type": "boolean",
        "description": "Auto-file disputes on quality failure",
        "default": true
      },
      "KAMIYO_MIN_REPUTATION": {
        "type": "number",
        "description": "Minimum provider reputation to trust",
        "default": 60
      },
      "KAMIYO_MONITOR_INTERVAL": {
        "type": "number",
        "description": "Escrow monitoring interval in milliseconds",
        "default": 60000
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "elizaos",
    "eliza",
    "ai-agents",
    "autonomous-agents",
    "kamiyo",
    "escrow",
    "x402",
    "dispute-resolution",
    "solana",
    "trust"
  ],
  "author": "KAMIYO <dev@kamiyo.ai>",
  "dependencies": {
    "@kamiyo/sdk": "workspace:*",
    "@solana/web3.js": "^1.95.8",
    "@coral-xyz/anchor": "^0.31.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "tsup": "^8.0.2",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@elizaos/core": ">=1.0.0"
  },
  "files": [
    "dist",
    "images",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
