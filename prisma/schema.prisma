generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Use PostgreSQL for both development and production
  // Local: Use Render preview URL or set up local PostgreSQL
  // Production: Provided by Render
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  passwordHash  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  kami          Kami[]
  subscriptions Subscription[]
  webhooks      Webhook[]
  watchlists    Watchlist[]
  apiRequests   ApiRequest[]
}

model Kami {
  id          String   @id @default(uuid())
  userId      String
  workerId    String?  // Add this to store the TEE worker ID
  attestation String?  // Add this to store the attestation report
  image       String
  title       String
  japanese    String
  tier        String
  status      String   @default("summoned") // Track status of the kami
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}


model Agent {
  id            String   @id @default(uuid())
  userId        String
  status        String
  deploymentId  String?
  characterFile Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Kami_42 {
  id         String @id @default(uuid())
  stateHash  String
  origin     String @default("pfn-shadow-02")
  confidence Float
}

model Subscription {
  id        String   @id @default(uuid())
  userId    String
  tier      String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Webhook {
  id          String   @id @default(uuid())
  userId      String
  url         String
  name        String?
  description String?
  chains      String?  // JSON array of chain filters
  minAmount   Float?   // Minimum exploit amount to trigger
  status      String   @default("active")  // active, paused, failed
  lastTrigger DateTime?
  failCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Watchlist {
  id          String   @id @default(uuid())
  userId      String
  protocol    String
  chain       String?
  alertOnNew  Boolean  @default(true)
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, protocol, chain])
}

model ApiRequest {
  id        String   @id @default(uuid())
  userId    String
  endpoint  String
  timestamp DateTime @default(now())
  date      String   // Format: YYYY-MM-DD for efficient daily counting
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}
