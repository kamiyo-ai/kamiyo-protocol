# Mitama Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Network Configuration
# =============================================================================

# Solana cluster (localnet, devnet, mainnet-beta)
SOLANA_CLUSTER=devnet

# RPC endpoint (use your own RPC provider for production)
# Recommended providers: Helius, QuickNode, Triton
SOLANA_RPC_URL=https://api.devnet.solana.com

# RPC URL for scripts (initialize.ts, add-oracle.ts)
RPC_URL=https://api.devnet.solana.com

# WebSocket endpoint for subscriptions
SOLANA_WS_URL=wss://api.devnet.solana.com

# =============================================================================
# Program Configuration
# =============================================================================

# Mitama program ID (same across all networks)
MITAMA_PROGRAM_ID=8sUnNU6WBD2SYapCE12S7LwH1b8zWoniytze7ifWwXCM

# =============================================================================
# Multi-Sig Authority Keys (MAINNET ONLY - Keep secure!)
# =============================================================================

# Path to primary authority keypair
# PRIMARY_AUTHORITY_KEYPAIR=/path/to/authority-1.json

# Secondary and tertiary authority public keys (for initialization)
# AUTHORITY_2=<pubkey>
# AUTHORITY_3=<pubkey>

# =============================================================================
# Oracle Configuration
# =============================================================================

# Minimum oracles required for consensus
MIN_CONSENSUS_ORACLES=2

# Maximum score deviation allowed between oracles
MAX_SCORE_DEVIATION=15

# Oracle public keys (comma-separated)
# ORACLE_PUBKEYS=oracle1pubkey,oracle2pubkey,oracle3pubkey

# =============================================================================
# Token Mints
# =============================================================================

# USDC mint address
USDC_MINT_MAINNET=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
USDC_MINT_DEVNET=Gh9ZwEmdLJ8DscKNTkTqPbNwLNNBjuSzaG9Vn2KGtKJr

# USDT mint address
