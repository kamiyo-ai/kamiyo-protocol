{
  "dashboard": {
    "id": null,
    "uid": "kamiyo-overview",
    "title": "Kamiyo Platform Overview",
    "tags": ["kamiyo", "overview"],
    "timezone": "utc",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "type": "graph",
        "title": "API Request Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yaxes": [
          { "label": "requests/sec", "format": "short" },
          { "show": false }
        ]
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "type": "graph",
        "title": "API Response Time",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99"
          }
        ],
        "yaxes": [
          { "label": "seconds", "format": "s" },
          { "show": false }
        ]
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "type": "graph",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx errors"
          }
        ],
        "yaxes": [
          { "label": "errors/sec", "format": "short" },
          { "show": false }
        ]
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "type": "stat",
        "title": "System Health",
        "targets": [
          {
            "expr": "up{job=\"kamiyo-api\"}",
            "legendFormat": "API"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "Database"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Cache"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 5,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "type": "graph",
        "title": "Database Connections",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active connections"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "Max connections"
          }
        ],
        "yaxes": [
          { "label": "connections", "format": "short" },
          { "show": false }
        ]
      },
      {
        "id": 6,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "type": "graph",
        "title": "Cache Hit Rate",
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m]) / (rate(cache_hits_total[5m]) + rate(cache_misses_total[5m])) * 100",
            "legendFormat": "Hit rate %"
          }
        ],
        "yaxes": [
          { "label": "hit rate %", "format": "percent", "min": 0, "max": 100 },
          { "show": false }
        ]
      },
      {
        "id": 7,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "type": "graph",
        "title": "New Exploits Aggregated",
        "targets": [
          {
            "expr": "increase(exploits_aggregated_total[1h])",
            "legendFormat": "{{source}}"
          }
        ],
        "yaxes": [
          { "label": "exploits/hour", "format": "short" },
          { "show": false }
        ]
      },
      {
        "id": 8,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "type": "stat",
        "title": "Active Users (24h)",
        "targets": [
          {
            "expr": "count(count by (user_id) (api_requests_total{time_range=\"24h\"}))",
            "legendFormat": "Active users"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value"
        }
      },
      {
        "id": 9,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
        "type": "graph",
        "title": "WebSocket Connections",
        "targets": [
          {
            "expr": "websocket_connections_active",
            "legendFormat": "Active connections"
          }
        ],
        "yaxes": [
          { "label": "connections", "format": "short" },
          { "show": false }
        ]
      },
      {
        "id": 10,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
        "type": "graph",
        "title": "Payment Processing",
        "targets": [
          {
            "expr": "rate(stripe_payments_total{status=\"succeeded\"}[5m])",
            "legendFormat": "Successful"
          },
          {
            "expr": "rate(stripe_payments_total{status=\"failed\"}[5m])",
            "legendFormat": "Failed"
          }
        ],
        "yaxes": [
          { "label": "payments/sec", "format": "short" },
          { "show": false }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  },
  "overwrite": true
}
